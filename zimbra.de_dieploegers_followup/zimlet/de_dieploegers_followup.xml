<zimlet name="de_dieploegers_followup" version="1.0"
        description="${msg.ZIMLETDESCRIPTION}">
  <include>de_dieploegers_followup.js</include>
  <includeCSS>de_dieploegers_followup.css</includeCSS>
  <include>json2_min.js</include>
  <handlerObject>de_dieploegers_followupHandlerObject</handlerObject>
  <zimletPanelItem label="${msg.ZIMLETNAME}" 
                   icon="Time">
      <toolTipText>${msg.ZIMLETDESCRIPTION}</toolTipText>
  </zimletPanelItem>
</zimlet>